<Window x:Class="Helix.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Helix"
        Title="Neo Launcher"
        Width="1000" Height="600"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Black">

    <Grid>
        <Image Source="https://i.imgur.com/aBy5xAV.jpeg" Stretch="Fill"/>

        <DockPanel VerticalAlignment="Top" Height="59" Background="#0D0D12">
            <TextBlock Text="Welcome Back!" Foreground="White" FontWeight="Bold"
                       FontSize="15" Margin="10,0,0,0" Height="17" Width="985">
                <UIElement.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </UIElement.RenderTransform>
            </TextBlock>
        </DockPanel>


        <StackPanel Orientation="Vertical"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Left"
                    Margin="20,0,0,20"/>

        <DockPanel VerticalAlignment="Top" Height="66" Background="#0D0D12" Margin="751,534,0,0">
            <Button Content="Launch Helix"
                    FontWeight="Bold"
                    Foreground="White"
                    Background="#00C853"
                    Cursor="Hand"
                    Click="PlayButton_Click"
                    Width="170"
                    Height="39">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </DockPanel>

        <DockPanel VerticalAlignment="Top" Height="73" Background="#0D0D12" Margin="-16,534,241,0"/>
        <Button Content="+"
            FontWeight="Bold"
            FontSize="24"
            Foreground="Black"
            Background="White"
            Cursor="Hand"
            Click="AddBuildButton_Click"
            Width="40"
            Height="40"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Left"
            Margin="731,0,0,13"
            ToolTip="Add Fortnite 24.20 Build Folder">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" CornerRadius="5">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
