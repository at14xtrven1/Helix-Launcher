<Window x:Class="WpfApp1.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vibin Launcher"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Width="800" Height="470">

    <Grid>
        <!-- Background Image -->
        <Image Source="https://i.imgur.com/iKD9Hao.jpeg" Stretch="Fill"/>

        <!-- Semi-transparent Dark Panel -->
        <Border Background="#CC1E1E1E"
                CornerRadius="20"
                Width="400"
                Height="360"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="30">
            <StackPanel>
                <!-- Title -->
                <TextBlock Text="Welcome!" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,10"/>

                <!-- Subtitle -->
                <TextBlock Text="Login with your credentials" 
                           FontSize="14" 
                           Foreground="#BBB" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Email -->
                <TextBlock Text="Email" 
                           Foreground="White" 
                           FontWeight="SemiBold"/>
                <Border Background="#333" CornerRadius="6" BorderBrush="#555" BorderThickness="1" Margin="0,5,0,15">
                    <TextBox x:Name="EmailTextBox" Background="Transparent" Foreground="White" Padding="8" BorderThickness="0"
                             TextChanged="InputField_TextChanged"/>
                </Border>

                <!-- Password -->
                <TextBlock Text="Password" 
                           Foreground="White" 
                           FontWeight="SemiBold"/>
                <Border Background="#333" CornerRadius="6" BorderBrush="#555" BorderThickness="1" Margin="0,5,0,15">
                    <PasswordBox x:Name="PasswordBox" Background="Transparent" Foreground="White" Padding="8" BorderThickness="0"
                                 PasswordChanged="InputField_TextChanged"/>
                </Border>

                <!-- Remember Me -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15" VerticalAlignment="Center">
                    <CheckBox x:Name="RememberCheckBox" Margin="0,0,5,0"/>
                    <TextBlock Text="Remember Me" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Login Button -->
                <Button Background="#0078D7"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="16"
                        Height="40"
                        Cursor="Hand"
                        BorderThickness="0"
                        Click="LoginButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    Login
                </Button>
            </StackPanel>
        </Border>

        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay" Background="#AA000000" Visibility="Collapsed"
              HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Panel.ZIndex="10">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- Spinner -->
                <Ellipse Width="50" Height="50" Stroke="White" StrokeThickness="5" StrokeDashArray="2 4">
                    <Ellipse.RenderTransform>
                        <RotateTransform x:Name="SpinnerRotate" CenterX="25" CenterY="25"/>
                    </Ellipse.RenderTransform>
                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetName="SpinnerRotate"
                                                     Storyboard.TargetProperty="Angle"
                                                     From="0" To="360" Duration="0:0:2"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>

                <TextBlock x:Name="LoadingText" Text="Logging in..." Foreground="White" FontSize="16" 
                           HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
